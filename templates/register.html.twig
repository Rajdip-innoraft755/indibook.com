{% extends 'base.html.twig' %}
{% block css %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset("assets/css/homeindex.css") }}">
{% endblock %}
{% block js %}
	{{ parent() }}
	<script src="{{ asset("assets/js/validate.js") }}"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-throttle-debounce/1.1/jquery.ba-throttle-debounce.min.js"
	integrity="sha512-JZSo0h5TONFYmyLMqp8k4oPhuo6yNk9mHM+FY50aBjpypfofqtEWsAgRDQm94ImLCzSaHeqNvYuD9382CEn2zw=="
	crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block sidebar %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="wrapper">
		<div class="logo">
			<a href="/landing"><img src="/assets/img/logo.png" alt="">
				<p>INDIBOOK</p>
			</a>
		</div>
		<div class="title-text">
			<div class="title signup">USER REGISTRATION</div>
		</div>
		<div class="form-container">
			<div class="form-inner">
				<form action="/register" class="signup" method="POST" enctype="multipart/form-data">
					<div class="field" id="fName">
						<input type="text" placeholder="First Name" name="fName" required>
						<span class="error">
							{% if error["fName"] is defined %}
								{{ error["fName"] }}
							{% endif %}
						</span>

					</div>


					<div class="field" id="lName">
						<input type="text" placeholder="Last Name" name="lName" required>
						<span class="error">
							{% if error["lName"] is defined %}
								{{ error["lName"] }}
							{% endif %}
						</span>

					</div>


					<div class="field" id="userId">
						<input type="text" placeholder="User ID" name="userId" required>
						<span class="error">
							{% if error["userId"] is defined %}
								{{ error["userId"] }}
							{% endif %}
						</span>
					</div>

					<span id="file-upload-label">Choose your profile picture</span>
					<div class="field" id="imgUpload">
						<i class="fa-solid fa-file-arrow-up" id="file-upload-btn"></i>
						<input type="file" id="file-upload-input" accept="image/*" name="imgUpload">
					</div>

					<div class="field" id="emailId">
						<input type="text" placeholder="Email Address" name="emailId" required>
						<span class="error">
							{% if error["emailId"] is defined %}
								{{ error["emailId"] }}
							{% endif %}
						</span>

					</div>


					<div class="field" id="password">
						<div class="password-input">
							<input type="password" placeholder="Password" id="pass" name="password" required>
								<i id="eye" class="fa-regular fa-eye"></i>
							</input>
						</div>
						<span class="error">
							{% if error["password"] is defined %}
								{{ error["password"] }}
							{% endif %}
						</span>

					</div>
					<div class="field pass-instruction">
						<p>Password should be 8-15 character and contains
							<br>
							atleast 1 uppcase
							<br>
							atleast 1 lowercase
							<br>
							atleast 1 special character(@ , # , $ , ? , ! , % , &)<br>
							atleast 1 number</p>
					</div>

					<div class="field" id="cookie">
						<input type="checkbox" name="cookie" value="accept">
						<label>Click Here to Accept Our Cookie Policy</label>
					</div>

					<div class="field btn">
						<div class="btn-layer"></div>
						<input type="submit" value="Register" id="submit-btn">
					</div>


					<div class="field btn">
						<div class="btn-layer"></div>
						<button>
							<a href="/">Go Back</a>
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>

{% endblock %}
